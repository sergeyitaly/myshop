# Base image with OpenJDK for Android development
FROM openjdk:11 AS android-build

# Set working directory
WORKDIR /app/android

# Install required tools and dependencies
RUN apt-get update && apt-get install -y wget unzip lib32stdc++6 lib32z1 ruby-full && rm -rf /var/lib/apt/lists/*

# Download and set up Android SDK
RUN wget https://dl.google.com/android/repository/commandlinetools-linux-9477386_latest.zip -O cmdline-tools.zip && \
    unzip cmdline-tools.zip -d /sdk && rm cmdline-tools.zip && \
    mkdir -p /sdk/cmdline-tools/latest && mv /sdk/cmdline-tools/* /sdk/cmdline-tools/latest && \
    yes | /sdk/cmdline-tools/latest/bin/sdkmanager --licenses && \
    /sdk/cmdline-tools/latest/bin/sdkmanager "platform-tools" "platforms;android-33" "build-tools;33.0.2"

# Set environment variables for Android SDK
ENV ANDROID_HOME=/sdk
ENV PATH=$ANDROID_HOME/platform-tools:$ANDROID_HOME/cmdline-tools/latest/bin:$PATH

# Install Fastlane
RUN gem install fastlane

# Copy Android project files
COPY android/ /app/android/

# Build APK using Fastlane
RUN fastlane android build
