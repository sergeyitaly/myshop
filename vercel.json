{
  "builds": [{
    "src": "myshop/wsgi.py",
    "use": "@ardnt/vercel-python-wsgi",
    "config": { "maxLambdaSize": "100mb" }
},
{
  "src": "build_files.sh",
  "use": "@vercel/static",
  "config": {
    "distDir": "static"
  }
}
  ],
"routes": [
    {
        "src": "/(.*)",
        "dest": "vercel_app/wsgi.py"
    }
],
  "rewrites": [
    { "source": "/static/(.*)", "destination": "https://kolorytmedia.s3.amazonaws.com/staticfiles_build/static/$1" },
    { "source": "/media/(.*)", "destination": "https://kolorytmedia.s3.amazonaws.com/media/$1" },
    { "source": "/dist/(.*)", "destination": "/dist/$1" },
    { "source": "/assets/(.*)", "destination": "/dist/assets/$1" },
    { "source": "/templates/(.*)", "destination": "/templates/$1" }
  ],
  "headers": [
    {
      "source": "/media/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    }
  ]
}
