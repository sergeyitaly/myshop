{
  "version": 2,
  "builds": [
    {
      "src": "myshop/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "200mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "https://kolorytmedia.s3.amazonaws.com/staticfiles_build/static/$1"
    },
    {
      "src": "/dist/(.*)",
      "dest": "https://kolorytmedia.s3.amazonaws.com/dist/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "https://kolorytmedia.s3.amazonaws.com/dist/assets/$1"
    },
    {
      "src": "/templates/(.*)",
      "dest": "https://kolorytmedia.s3.amazonaws.com/templates/$1"
    },
    {
      "handle": "filesystem"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "myshop/wsgi.py"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    }
  ]
}
