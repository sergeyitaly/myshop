{
  "version": 2,
  "builds": [
    { "src": "myshop/wsgi.py", "use": "@vercel/python", "config": { "maxLambdaSize": "200mb", "runtime": "python3.9" } },
    { "src": "build_files.sh", "use": "@vercel/static-build" }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "https://kolorytmedia.s3.amazonaws.com/staticfiles_build/static/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "https://kolorytmedia.s3.amazonaws.com/staticfiles_build/static/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/myshop/wsgi.py"
    }
  ],
  "redirects": [
    {
      "source": "/uk/:path*",
      "destination": "/:path*",
      "has": [
        {
          "type": "header",
          "key": "x-vercel-ip-country",
          "value": "UA"
        }
      ],
      "permanent": false
    }
  ]
}
