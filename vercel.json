
{
  "version": 2,
  "build": {
    "env": {
      "DJANGO_SETTINGS_MODULE": "myshop.settings.production"
    },
    "cmd": "pip install -r requirements.txt && python manage.py collectstatic --noinput && du -h --max-depth=5 | sort -rh"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "myshop/wsgi.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "https://kolorytmedia.s3.amazonaws.com/staticfiles_build/static/$1"
    }
  ]
}