{
  "version": 2,
  "builds": [
    {
      "src": "myshop/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "100mb",
        "runtime": "python3.9",
        "maxDuration": 20
      }
    },
    { 
      "src": "build_files.sh", 
      "use": "@vercel/static-build" 
    }
  ],
  "functions": {
    "myshop/wsgi.py": {
      "maxDuration": 20
    }
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "https://kolorytmedia.s3.amazonaws.com/staticfiles_build/static/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "https://kolorytmedia.s3.amazonaws.com/staticfiles_build/static/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/myshop/wsgi.py"
    }
  ]
}
