{
  "builds": [{
    "src": "myshop/wsgi.py",
    "use": "@ardnt/vercel-python-wsgi",
    "config": { "maxLambdaSize": "100mb" }
},
{
  "src": "build_files.sh",
  "use": "@vercel/static"
}
  ],
"routes": [
    {
        "src": "/(.*)",
        "dest": "vercel_app/wsgi.py"
    }
],
  "rewrites": [
    { "source": "/static/(.*)", "destination": "https://kolorytmedia.s3.amazonaws.com/staticfiles_build/static/$1" },
    { "source": "/media/(.*)", "destination": "https://kolorytmedia.s3.amazonaws.com/media/$1" },
    { "source": "/dist/(.*)", "destination": "/dist/$1" },
    { "source": "/assets/(.*)", "destination": "/dist/assets/$1" },
    { "source": "/templates/(.*)", "destination": "/templates/$1" }
  ]
}
