{
  "version": 2,
  "functions": {
    "api": {
      "runtime": "vercel-python@3.9",
      "memory": 512,
      "maxDuration": 30
    },
    "buildScript": {
      "runtime": "@vercel/static-build",
      "includeFiles": ["myshop/wsgi.py", "build_files.sh"]
    }
  },
  "rewrites": [
    { "source": "/static/(.*)", "destination": "https://kolorytmedia.s3.amazonaws.com/staticfiles_build/static/$1" },
    { "source": "/dist/(.*)", "destination": "https://kolorytmedia.s3.amazonaws.com/dist/$1" },
    { "source": "/assets/(.*)", "destination": "https://kolorytmedia.s3.amazonaws.com/dist/assets/$1" },
    { "source": "/templates/(.*)", "destination": "https://kolorytmedia.s3.amazonaws.com/templates/$1" },
    { "source": "/media/(.*)", "destination": "https://kolorytmedia.s3.amazonaws.com/media/$1" }
  ],
  "headers": [
    {
      "source": "/media/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    }
  ],
  "builds": [
    { "src": "build_files.sh", "use": "@buildScript" }
  ]
}
